<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BrickController2.UI.Controls"
    x:Class="BrickController2.UI.Controls.ImageButton">
    
  <ContentView.Content>
        <StackLayout x:Name="ImageFrame" BackgroundColor="Transparent" Padding="0">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer x:Name="TapGuestureRecognizer"/>
            </StackLayout.GestureRecognizers>
            <controls:ColorImage x:Name="Image" HorizontalOptions="Center" VerticalOptions="Center" Aspect="AspectFill"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>