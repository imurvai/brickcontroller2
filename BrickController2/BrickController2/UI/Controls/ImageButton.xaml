<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BrickController2.UI.Controls"
    x:Class="BrickController2.UI.Controls.ImageButton">
    
    <ContentView.Content>
        <Grid BackgroundColor="Transparent" Padding="0">
            <controls:ColorImage x:Name="MyImage" HorizontalOptions="Center" VerticalOptions="Center" Aspect="AspectFill">
                <controls:ColorImage.GestureRecognizers>
                    <TapGestureRecognizer x:Name="MyTapGuestureRecognizer"/>
                </controls:ColorImage.GestureRecognizers>
            </controls:ColorImage>
        </Grid>
    </ContentView.Content>
</ContentView>