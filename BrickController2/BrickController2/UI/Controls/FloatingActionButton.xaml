<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BrickController2.UI.Controls"
    x:Class="BrickController2.UI.Controls.FloatingActionButton">
    
  <ContentView.Content>
        <Frame x:Name="ImageFrame" WidthRequest="50" HeightRequest="50" CornerRadius="25" Padding="0">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer x:Name="TapGuestureRecognizer"/>
            </Frame.GestureRecognizers>
            <controls:ColorImage x:Name="Image" WidthRequest="20" HeightRequest="20" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>
    </ContentView.Content>
</ContentView>