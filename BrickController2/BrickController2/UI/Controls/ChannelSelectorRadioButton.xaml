<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BrickController2.UI.Controls"
    x:Class="BrickController2.UI.Controls.ChannelSelectorRadioButton">

    <ContentView.Content>
        <HorizontalStackLayout Spacing="6">
            <HorizontalStackLayout.GestureRecognizers>
                <TapGestureRecognizer x:Name="TapRecognizer"/>
            </HorizontalStackLayout.GestureRecognizers>
            <Grid VerticalOptions="Center">
                <Border BackgroundColor="{DynamicResource SecondaryColor}" WidthRequest="22" HeightRequest="22" StrokeShape="RoundRectangle 11" Padding="0" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Border BackgroundColor="{DynamicResource PageBackgroundColor}" WidthRequest="20" HeightRequest="20" StrokeShape="RoundRectangle 11"  Padding="0" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Border x:Name="CheckedIndicatorFrame" BackgroundColor="{DynamicResource RadioButtonSelectedColor}" WidthRequest="14" HeightRequest="14" StrokeShape="RoundRectangle 8" Padding="0" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>
            <controls:DeviceChannelLabel x:Name="ChannelLabel" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </ContentView.Content>
</ContentView>